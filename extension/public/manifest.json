{
  "manifest_version": 3,
  "name": "AI Meeting Companion",
  "version": "1.0.0",
  "description": "AI-powered meeting companion with real-time transcription, intelligent note-taking, and smart insights for online meetings.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "tabCapture",
    "offscreen",
    "notifications"
  ],
  "host_permissions": [
    "*://*.zoom.us/*",
    "*://meet.google.com/*",
    "*://teams.microsoft.com/*",
    "*://teams.live.com/*",
    "*://*.webex.com/*",
    "*://*.gotomeeting.com/*",
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Meeting Companion",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zoom.us/*",
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*",
        "*://*.webex.com/*",
        "*://*.gotomeeting.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.js",
        "sidebar.css",
        "icons/*",
        "images/*"
      ],
      "matches": [
        "*://*.zoom.us/*",
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*",
        "*://*.webex.com/*",
        "*://*.gotomeeting.com/*"
      ]
    }
  ],
  "minimum_chrome_version": "88",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://localhost:* wss://localhost:* https://api.openai.com;"
  }
}
