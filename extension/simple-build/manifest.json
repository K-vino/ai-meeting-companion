{
  "manifest_version": 3,
  "name": "VMD-AI Meeting Companion",
  "version": "1.0.2",
  "description": "VMD-AI powered meeting companion with real-time transcription and intelligent insights",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.zoom.us/*",
    "*://meet.google.com/*",
    "*://teams.microsoft.com/*",
    "*://teams.live.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "VMD-AI Meeting Companion",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zoom.us/*",
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.js"
      ],
      "matches": [
        "*://*.zoom.us/*",
        "*://meet.google.com/*",
        "*://teams.microsoft.com/*",
        "*://teams.live.com/*"
      ]
    }
  ]
}